<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_20sdp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp" />
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/update_dialog_title"
        android:text="1"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/_12sdp"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/mandatory_state"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/update_dialog_version_number"
        android:text=""
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/update_dialog_text_btn"
        android:text="ff"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_title"
        android:id="@+id/ll_buttons">
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:id="@+id/update_dialog_cancel_button"
            android:layout_marginRight="@dimen/_10sdp"/>
        <Button
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/download"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/update_dialog_download_button"/>
    </LinearLayout>
</LinearLayout>