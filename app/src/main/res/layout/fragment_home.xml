<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <ImageButton
        android:id="@+id/btnGame1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_timer"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame2"
        app:layout_constraintEnd_toStartOf="@+id/btnGame5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGame2" />

    <ImageButton
        android:id="@+id/btnGame2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_hourglass"
        app:layout_constraintBottom_toTopOf="@+id/btnGame5"
        app:layout_constraintEnd_toStartOf="@+id/btnGame6"
        app:layout_constraintStart_toEndOf="@+id/btnGame4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGame3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_dialpad"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGame5"
        app:layout_constraintTop_toTopOf="@+id/btnGame2" />

    <ImageButton
        android:id="@+id/btnGame4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_memory_game"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame5"
        app:layout_constraintEnd_toStartOf="@+id/btnGame5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGame5" />

    <ImageButton
        android:id="@+id/btnGame5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_sigma"
        app:layout_constraintBottom_toTopOf="@+id/btnGame8"
        app:layout_constraintEnd_toStartOf="@+id/btnGame6"
        app:layout_constraintStart_toEndOf="@+id/btnGame4"
        app:layout_constraintTop_toBottomOf="@+id/btnGame2" />

    <TextView
        android:id="@+id/btnGame6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_empty"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGame5"
        app:layout_constraintTop_toTopOf="@+id/btnGame5" />

    <ImageButton
        android:id="@+id/btnGame7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_fight"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame8"
        app:layout_constraintEnd_toStartOf="@+id/btnGame5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGame8" />

    <TextView
        android:id="@+id/btnGame8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_empty"
        android:text="x = ?"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGame10"
        app:layout_constraintEnd_toStartOf="@+id/btnGame6"
        app:layout_constraintStart_toEndOf="@+id/btnGame4"
        app:layout_constraintTop_toBottomOf="@+id/btnGame5"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnGame9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_puzzle"
        app:layout_constraintBottom_toBottomOf="@+id/btnGame8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGame5"
        app:layout_constraintTop_toTopOf="@+id/btnGame8" />

    <ImageButton
        android:id="@+id/btnGame10"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_circle_selector"
        android:padding="16dp"
        android:src="@drawable/ic_connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGame8" />
</androidx.constraintlayout.widget.ConstraintLayout>