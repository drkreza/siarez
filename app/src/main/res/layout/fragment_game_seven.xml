<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".seven.GameSevenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainerGame7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rotation="180"
        tools:context=".seven.GameSevenFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt1Game7Top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="top"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt3Game7Top"
            app:layout_constraintEnd_toStartOf="@+id/btnOpt2Game7Top"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt2Game7Top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="top"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt4Game7Top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btnOpt1Game7Top"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt3Game7Top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="top"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnOpt4Game7Top"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt4Game7Top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="top"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btnOpt3Game7Top"
            tools:text="40" />

        <TextView
            android:id="@+id/txtQuestionGame7Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="@color/blue"
            android:textSize="28dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt1Game7Top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="4 X 3 = ?" />

        <ProgressBar
            android:id="@+id/progressGame7Top"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCountTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray_light"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@id/progressGame7Top"
            app:layout_constraintStart_toStartOf="@id/progressGame7Top"
            app:layout_constraintTop_toTopOf="@id/progressGame7Top"
            tools:text="10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/downContainerGame7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".seven.GameSevenFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt1Game7Down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="down"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt3Game7Down"
            app:layout_constraintEnd_toStartOf="@+id/btnOpt2Game7Down"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt2Game7Down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="down"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt4Game7Down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btnOpt1Game7Down"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt3Game7Down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="down"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnOpt4Game7Down"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="40" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpt4Game7Down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_options_selector"
            android:padding="12dp"
            android:tag="down"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btnOpt3Game7Down"
            tools:text="40" />

        <TextView
            android:id="@+id/txtQuestionGame7Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="@color/blue"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btnOpt1Game7Down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="4 X 3 = ?" />

        <ProgressBar
            android:id="@+id/progressGame7Down"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray_light"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/progressGame7Down"
            app:layout_constraintStart_toStartOf="@+id/progressGame7Down"
            app:layout_constraintTop_toTopOf="@+id/progressGame7Down"
            tools:text="10" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>